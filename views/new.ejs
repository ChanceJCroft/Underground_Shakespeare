<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Theatre</h1>
  <div class="col-6 offset-3">
    <form action="/theatres" method="POST">
      <h1>Add a new theatre</h1>
      <div class="mb-3">
          <label class="form-label" for="title">Theatre Name</label>
          <input class="form-control" type="text" id="title" name="theatre[title]">
      </div>
      <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="theatre[location]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input class="form-control" type="image" id="image" name="theatre[image]">
      </div>
      <div class="mb-3">
      <label class="form-label" for="price">Price</label>  
      <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Username" aria-describedby="price-label" name="theatre[price]">
      </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="theatre[description]"></textarea>
    </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Theatre!</button>
      </div>
  </form>
  <a href="/theatres">Back to all theatres</a>
  </div>
</div>
